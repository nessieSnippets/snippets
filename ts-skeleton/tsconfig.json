
   
{
    "compilerOptions": {
      "typeRoots": [
        "./node_modules/@types",
      ],
      "module": "commonjs",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "outDir": "build/",
      "rootDir": "."
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ],
    "compileOnSave": true
  }