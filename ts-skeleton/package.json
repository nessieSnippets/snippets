  "license": "ISC",
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.26",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "express": "4.17.3"
  }
}
