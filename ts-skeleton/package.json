{
  "name": "ts-skeleton",
  "version": "0.0.1",
  "description": "Skeleton for TS project",
  "main": "index.js",
  "scripts": {
    "build": "node_modules/typescript/bin/tsc",
    "start": "node build/src/server.js",
    "dev": "nodemon src/server.ts",
    "server": "node build/src/server.js",
    "server:dev": "nodemon src/server.ts",
    "lint": "prettier --check src/ test/ **.md",
    "lint:fix": "prettier --write src/ test/ **.md",
    "test:unit": "jest --testPathPattern=test/unit/",
    "test:component": "echo \"Add component test command here\""
  },
